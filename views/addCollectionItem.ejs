<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Add Shoe to Collection</title>
  <link rel="stylesheet" href="/css/addCollection.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="add-shoe-wizard">
    <form id="addCollectionForm" enctype="multipart/form-data">
      <!-- Step 1: Images -->
      <div class="wizard-step active" data-step="1">
        <h2>Step 1: Add Images</h2>
        <input type="file" name="images" id="images" accept="image/*" multiple required />
        <div class="image-preview" id="imagePreview"></div>
        <button type="button" class="btn-next">Next</button>
      </div>
      <!-- Step 2: Details -->
      <div class="wizard-step" data-step="2">
        <h2>Step 2: Shoe Details</h2>
        <label>Brand: <input type="text" name="brand" required /></label>
        <label>Bought on: <input type="date" name="boughtOn" required /></label>
        <label>Price you bought: <input type="number" name="boughtAtPrice" required /></label>
        <label>Current market price: <input type="number" name="marketPrice" required /></label>
        <button type="button" class="btn-prev">Back</button>
        <button type="button" class="btn-next">Next</button>
      </div>
      <!-- Step 3: Previous Owners -->
      <div class="wizard-step" data-step="3">
        <h2>Step 3: Previous Owners</h2>
        <div id="owners-container"></div>
        <button type="button" class="btn-primary" id="addOwnerBtn">+ Add Owner</button>
        <button type="button" class="btn-prev">Back</button>
        <button type="submit" class="btn-success">Upload</button>
      </div>
    </form>
    <div id="toast" class="toast"></div>
  </div>
  <script src="/js/collection-add.js"></script>
</body>
</html>
